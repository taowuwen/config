#!/usr/bin/env python3


from py_bin.netinfo import net_info as  netinfo

net = netinfo()

inf, ip, mask, gateway, network = net.route_info
inf, rx, tx = net.speed


print("{inf} {ip}/{mask} via {gateway} →{rx: >7.7s} ↓ {tx:>7.7s} ↑".format(
	inf=inf,
	ip=net.int2ip(ip),
	mask=net.int2ip(mask),
	gateway=net.int2ip(gateway),
	rx=net.speed_str(rx),
	tx=net.speed_str(tx)));
